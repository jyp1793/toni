<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.team5.user.mapper.UserMapper">
  
  	<insert id="join">
  		insert into userjoin values (#{userId}, #{userPw}, #{userName}, #{userPhone}, #{userEmail}, #{addrZipNum}, #{addrBasic}, #{addrDetail}, #{birthday}) 
  	</insert>
  
  	<select id="idCheck" resultType="int">
  		select count(*) from userjoin where userId = #{userId}
  	</select>
  
  </mapper>